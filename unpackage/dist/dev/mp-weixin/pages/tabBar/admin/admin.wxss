
.tx-w {
	padding: 20rpx 20rpx 0;
	background-image: -webkit-gradient(linear, left top, left bottom, from(#0bc5a3), to(#00BCD4));
	background-image: -webkit-linear-gradient(#0bc5a3, #00BCD4);
	background-image: linear-gradient(#0bc5a3, #00BCD4);
}
.tx {
	color: #FFFFFF;
	font-weight: bold;
}
.tx image {
	float: left;
	width: 140rpx;
	height: 140rpx;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
}
.name {
	float: left;
	text-align: center;
	margin-top: 60rpx;
	margin-left: 20rpx;
}
.zx {
	clear: both;
}
.name-qm {
	margin-top: 30rpx;
	padding: 0rpx 20rpx;
	font-size: 30rpx;
	height: 90rpx;
	line-height: 90rpx;
	background: #333;
	color: #ecc32e;
	-webkit-border-top-left-radius: 25rpx;
	        border-top-left-radius: 25rpx;
	-webkit-border-top-right-radius: 25rpx;
	        border-top-right-radius: 25rpx;
}
.name-hei,
.name-new,
.name-ka {
	float: left;
}
.name-new {
	font-size: small;
	margin-left: 130rpx;
}
.name-ka {
	margin-top: 15rpx;
	margin-left: 20rpx;
	padding-left: 20rpx;
	font-size: 28rpx;
	width: 160rpx;
	font-weight: bold;
	height: 60rpx;
	line-height: 60rpx;
	background: #ecc32e;
	color: #333;
	-webkit-border-radius: 30rpx;
	        border-radius: 30rpx;
}

